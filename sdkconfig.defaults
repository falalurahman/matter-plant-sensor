# FreeRTOS - Arduino requires 1000Hz tick rate
CONFIG_FREERTOS_HZ=1000

# Arduino auto-start (provides app_main with setup/loop)
CONFIG_AUTOSTART_ARDUINO=y

# Flash size - ESP32-H2-DevKitM-1 has 4MB
CONFIG_ESPTOOLPY_FLASHSIZE_4MB=y

# Custom partition table
CONFIG_PARTITION_TABLE_CUSTOM=y
CONFIG_PARTITION_TABLE_CUSTOM_FILENAME="partitions.csv"

# Matter data model
CONFIG_ESP_MATTER_ENABLE_DATA_MODEL=y

# Matter over Thread (ESP32-H2 native)
CONFIG_ENABLE_MATTER_OVER_THREAD=y

# BLE stack (required for CHIPoBLE commissioning)
CONFIG_BT_ENABLED=y
CONFIG_BT_NIMBLE_ENABLED=y

# BLE commissioning
CONFIG_ENABLE_CHIPOBLE=y

# OpenThread MTD (Minimal Thread Device) - required for ICD
CONFIG_OPENTHREAD_MTD=y

# ICD (Intermittently Connected Device) configuration
CONFIG_ENABLE_ICD_SERVER=y
CONFIG_ENABLE_ICD_LIT=y
CONFIG_ENABLE_ICD_CIP=y
CONFIG_ENABLE_ICD_USER_ACTIVE_MODE_TRIGGER=y
CONFIG_ICD_REPORT_ON_ACTIVE_MODE=y

# ICD timing parameters
CONFIG_ICD_IDLE_MODE_INTERVAL_SEC=3600
CONFIG_ICD_ACTIVE_MODE_INTERVAL_MS=10000
CONFIG_ICD_ACTIVE_MODE_THRESHOLD_MS=5000
CONFIG_ICD_SLOW_POLL_INTERVAL_MS=30000
CONFIG_ICD_FAST_POLL_INTERVAL_MS=200

# mbedTLS - HKDF required by Matter crypto
CONFIG_MBEDTLS_HKDF_C=y

# ============================================================================
# Debug Logging Configuration
# ============================================================================

# ESP Log Level - Set to DEBUG for detailed logs
CONFIG_LOG_DEFAULT_LEVEL_DEBUG=y
CONFIG_LOG_DEFAULT_LEVEL=4
CONFIG_LOG_MAXIMUM_LEVEL=5

# Matter/CHIP Debug Logging
CONFIG_ENABLE_CHIP_SHELL=n
CONFIG_CHIP_LOG_FILTERING=n

# Enable detailed logs for Matter components
CONFIG_LOG_CHIP_DETAIL=y
CONFIG_LOG_CHIP_PROGRESS=y
CONFIG_LOG_CHIP_ERROR=y

# BLE Debug Logging
CONFIG_BT_LOG_LEVEL=4
CONFIG_BLE_DEBUG_LEVEL=4
CONFIG_NIMBLE_LOG_LEVEL=4

# OpenThread Logging (already configured but ensure it's verbose)
CONFIG_OPENTHREAD_LOG_LEVEL_DEBG=y

# Arduino Core Debug Level
CONFIG_ARDUHAL_LOG_DEFAULT_LEVEL_DEBUG=y
CONFIG_ARDUHAL_LOG_DEFAULT_LEVEL=4
